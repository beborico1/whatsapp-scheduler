# WhatsApp Scheduler Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
# For Docker: use 'postgres' as host, for local development use 'localhost'
DATABASE_URL=postgresql://user:password@postgres/whatsapp_scheduler

# Redis Configuration
# For Docker: use 'redis' as host, for local development use 'localhost'
REDIS_URL=redis://redis:6379/0

# Security
# Generate a secure key: openssl rand -base64 32
SECRET_KEY=your-secret-key-here

# WhatsApp Business API Configuration
# Get these from your Meta/Facebook App Dashboard
# https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_APP_ID=your-app-id
WHATSAPP_APP_SECRET=your-app-secret
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_API_VERSION=v22.0

# Optional: Development/Debug Settings
# DEBUG=true
# LOG_LEVEL=DEBUG

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourapp.com

# Optional: Celery Configuration
# CELERY_BROKER_URL=${REDIS_URL}
# CELERY_RESULT_BACKEND=${REDIS_URL}
# CELERY_TASK_ALWAYS_EAGER=false

# Optional: API Rate Limiting
# RATE_LIMIT_PER_MINUTE=60

# Optional: CORS Settings
# CORS_ORIGINS=["http://localhost:3000", "https://yourapp.com"]

# Optional: Timezone
# TIMEZONE=UTC